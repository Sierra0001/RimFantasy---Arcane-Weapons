<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseWeapon_ArcaneWeapon">
    <defName>RF_MeleeWeapon_GuardianClaymore</defName>
    <label>guardian claymore</label>
    <description>A jewelled claymore infused with magic that enables its users to fight more effectively.
\nThis weapon is enchanted and can only be wielded by a single person. The charged nature of the weapon also means that it may unleash a wave of energy upon destruction.</description>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponMelee/RF_GuardianClaymore/RF_GuardianClaymore</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <tickerType>Normal</tickerType>
    <soundInteract>Interact_BladelinkMonoSword</soundInteract>
    <meleeHitSound>MeleeHit_BladelinkMonoSword</meleeHitSound>
    <techLevel>Medieval</techLevel>
    <weaponTags>
      <li>MedievalMeleeAdvanced</li>
      <li>LongSword</li>
    </weaponTags>
    <thingSetMakerTags><li>RewardStandardQualitySuper</li></thingSetMakerTags>
    <statBases>
      <WorkToMake>18000</WorkToMake>
      <Mass>2</Mass>
    </statBases>
    <relicChance>2</relicChance>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <stuffCategories>
      <li>RF_Gemstones</li>
    </stuffCategories>
    <costStuffCount>20</costStuffCount>
    <costList>
      <Steel>250</Steel>
    </costList>
    <comps>
      <li Class="RimFantasy.CompProperties_ExplosiveStuffed">
        <wickTicks>60</wickTicks>
        <explosiveRadius>2</explosiveRadius>
        <explosiveDamageTypeBaseDefName>RF_Flame_SmallSquare</explosiveDamageTypeBaseDefName>
        <chanceNeverExplodeFromDamage>0</chanceNeverExplodeFromDamage>
        <postExplosionSpawnChance>0.2</postExplosionSpawnChance>
        <postExplosionSpawnBaseDefName>RF_RubbleShards</postExplosionSpawnBaseDefName>
        <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
      </li>
      <li Class="RimFantasy.CompProperties_GlowerStuffable">
				<glowRadius>1</glowRadius>
				<stuffGlow>true</stuffGlow>
				<glowWhileOnGround>true</glowWhileOnGround>
				<glowWhileStockpiled>true</glowWhileStockpiled>
				<glowWhileEquipped>true</glowWhileEquipped>
				<glowRadiusEquipped>1</glowRadiusEquipped>
				<glowWhileDrawn>true</glowWhileDrawn>
				<glowRadiusDrawn>2</glowRadiusDrawn>
      </li>
      <li Class="RimFantasy.CompProperties_WornWeapon">
				<sheathOnlyGraphicData>
					<texPath>Things/Item/Equipment/WeaponMelee/RF_GuardianClaymore/RF_GuardianClaymore_Sheath</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
				</sheathOnlyGraphicData>
				<fullGraphicData>
					<texPath>Things/Item/Equipment/WeaponMelee/RF_GuardianClaymore/RF_GuardianClaymore_Full</texPath>
					<graphicClass>Graphic_Multi</graphicClass>
        </fullGraphicData>
        <drawPosition>Side</drawPosition>
				<northOffset>
					<position>(0.2,0,-0.2)</position>
					<angle>0</angle>
				</northOffset>
				<southOffset>
					<position>(-0.2,0,-0.2)</position>
					<angle>0</angle>
				</southOffset>
				<eastOffset>
					<position>(0,-0.039,-0.2)</position>
					<angle>150</angle>
				</eastOffset>
				<westOffset>
					<position>(0,-0.009,-0.2)</position>
					<angle>-150</angle>
				</westOffset>
			</li>
    </comps>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>24</power>
        <cooldownTime>2.1</cooldownTime>
        <armorPenetration>0.15</armorPenetration>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>24</power>
        <cooldownTime>2.1</cooldownTime>
        <armorPenetration>0.15</armorPenetration>
      </li>
    </tools>
    <recipeMaker>
      <!--<researchPrerequisite>RF_ArcaneWeapons</researchPrerequisite>-->
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

</Defs>
