<Defs>

    <!--========== Diamond Wand ==========-->

    <ThingDef ParentName="RF_BaseWeapon_ArcaneStaves">
        <defName>RF_DiamondStaff</defName>
        <label>diamond staff</label>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/RF_GemstoneStaves/RF_DiamondStaff</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <costList>
            <RF_Diamond>75</RF_Diamond>
        </costList>
        <comps>
          <li Class="CompProperties_Explosive">
            <wickTicks>90</wickTicks>
            <explosiveRadius>2</explosiveRadius>
            <explosiveDamageType>RF_Flame_SmallSquareRF_Diamond</explosiveDamageType>
            <chanceNeverExplodeFromDamage>0</chanceNeverExplodeFromDamage>
            <postExplosionSpawnChance>0.2</postExplosionSpawnChance>
            <postExplosionSpawnThingDef>RF_RubbleShardsRF_Diamond</postExplosionSpawnThingDef>
            <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
          </li>
        </comps>
        <verbs>
            <li>
              <verbClass>Verb_Shoot</verbClass>
              <hasStandardCommand>true</hasStandardCommand>
              <defaultProjectile>RF_MagicBolt_Diamond</defaultProjectile>
              <warmupTime>1.8</warmupTime>
              <range>27</range>
              <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
              <burstShotCount>6</burstShotCount>
              <soundCast>Shot_ChargeRifle</soundCast>
            </li>
        </verbs>
    </ThingDef>

