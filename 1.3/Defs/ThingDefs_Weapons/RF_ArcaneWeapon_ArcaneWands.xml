<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--========== Diamond Wand ==========-->

    <ThingDef ParentName="RF_BaseWeapon_ArcaneWands">
        <defName>RF_DiamondWand</defName>
        <label>diamond wand</label>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponRanged/RF_GemstoneWands/RF_DiamondWand</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>TransparentPostLight</shaderType>
            <drawSize>1.2</drawSize>
        </graphicData>
        <costList>
            <RF_Diamond>75</RF_Diamond>
        </costList>
        <comps>
          <li Class="CompProperties_Explosive">
            <wickTicks>90</wickTicks>
            <explosiveRadius>2</explosiveRadius>
            <explosiveDamageType>RF_Flame_SmallSquareRF_Diamond</explosiveDamageType>
            <chanceNeverExplodeFromDamage>0</chanceNeverExplodeFromDamage>
            <postExplosionSpawnChance>0.2</postExplosionSpawnChance>
            <postExplosionSpawnThingDef>RF_RubbleShardsRF_Diamond</postExplosionSpawnThingDef>
            <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
          </li>
        </comps>
        <verbs>
            <li>
              <verbClass>Verb_Shoot</verbClass>
              <hasStandardCommand>true</hasStandardCommand>
              <defaultProjectile>RF_MagicBolt_Wand_Diamond</defaultProjectile>
              <warmupTime>1.35</warmupTime>
              <range>23</range>
              <soundCast>Shot_ChargeRifle</soundCast>
            </li>
        </verbs>
        <modExtensions>
          <li Class="RimFantasy.RimFantasyExtension">
            <stuffKey>Diamond</stuffKey>
          </li>
        </modExtensions>
    </ThingDef>

