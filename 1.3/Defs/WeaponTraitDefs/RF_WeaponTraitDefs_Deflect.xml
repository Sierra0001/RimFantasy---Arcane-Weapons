<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<RimFantasy.ArcaneWeaponTraitDef>
		<defName>RF_MinorDeflection</defName>
		<label>minor deflection</label>
		<description>Enchanted with lower battle magic, this weapon projects a weak bubble of magical energy that can sometimes shield the user from ranged attacks.</description>
		<workerClass>RimFantasy.ArcaneWeaponTraitWorker</workerClass>
		<isShield>true</isShield>
		<shieldRechargeRate>0.10</shieldRechargeRate>
		<shieldEnergyMax>1.1</shieldEnergyMax>
		<shieldTexPath>Other/ShieldBubble</shieldTexPath>
		<shieldCombatRecovery>false</shieldCombatRecovery>
		<deflectRangeChance>0.75</deflectRangeChance>
		<fleckDefOnDeflect>ElectricalSpark</fleckDefOnDeflect>
		<fleckDefOnDeflectScale>2.25</fleckDefOnDeflectScale>
		<commonality>1.25</commonality>
		<marketValueOffset>200</marketValueOffset>
	</RimFantasy.ArcaneWeaponTraitDef>

	<RimFantasy.ArcaneWeaponTraitDef>
		<defName>RF_Deflection</defName>
		<label>deflection</label>
