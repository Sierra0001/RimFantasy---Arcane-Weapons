    <!--========== Diamond Greatsword ==========-->

    <ThingDef ParentName="RF_BaseWeapon_ArcaneGreatswords">
        <defName>RF_DiamondGreatsword</defName>
        <label>diamond greatsword</label>
        <graphicData>
            <texPath>Things/Item/Equipment/WeaponMelee/RF_GemstoneGreatswords/RF_DiamondGreatsword</texPath>
