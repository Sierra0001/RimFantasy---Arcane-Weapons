            <shaderType>TransparentPostLight</shaderType>
        </graphicData>
        <costList>
            <RF_Diamond>75</RF_Diamond>
        </costList>
        <comps>
          <li Class="RimFantasy.CompProperties_GlowerStuffable">
            <glowRadius>1</glowRadius>
            <glowColor>(211,211,211)</glowColor>
